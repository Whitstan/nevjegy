{% extends "layout" %}

{% block content %}

<h1>{{ name }}</h1>

<div class="row">
    <div class="col-lg-4 col-md-6 col-sm-12">
        <div class="panel panel-primary">
            <div class="panel-heading">Kedvencek</div>
            <ul class="list-group">
            {% for fav in favorites %}
            <li class="list-group-item">
                <a href="/cards/{{ fav.id }}">
                {{ fav.last_name }}
                {{ fav.first_name }}
                </a>
            </li>
            {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}

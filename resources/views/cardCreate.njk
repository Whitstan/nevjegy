{% extends "layout" %}

{% block content %}
<h2>Új névjegykáryta</h2>

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibák</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}


<form class="form-horizontal" method="post">

  {{ csrfField }}

  <div class="form-group">
    <label for="first_name" class="col-lg-2 control-label">Keresztnév</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="first_name" name="first_name" placeholder="Keresztnév" value="{{old('first_name')}}">
    </div>
  </div>
  <div class="form-group">
    <label for="last_name" class="col-lg-2 control-label">Vezetéknév</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="last_name" name="last_name" placeholder="Vezetéknév" value="{{old('last_name')}}">
    </div>
  </div>
  <div class="form-group">
    <label for="email" class="col-lg-2 control-label">E-mail cím</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="email" name="email" placeholder="E-mail" value="{{old('email')}}">
    </div>
  </div>
  <div class="form-group">
    <label for="address" class="col-lg-2 control-label">Cím</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="address" name="address" placeholder="Cím" value="{{old('address')}}">
    </div>
  </div>
  <div class="form-group">
    <label for="category_id" class="col-lg-2 control-label">Kategória</label>
    <div class="col-lg-10">
      <select class="form-control" id="category_id" name="category_id">
        {% for category in categories %}
        <option value="{{ category.id }}"
          {% if category.id == old('category_id') %}
          selected
          {% endif %}
        >{{ category.name }}</option>
        {% endfor %}
      </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Mégsem</button>
      <button type="submit" class="btn btn-primary">Küldés</button>
    </div>
  </div>
</form>

{% endblock %}